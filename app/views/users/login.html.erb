<br>
<div class="container">
    <%= form_tag "/users/login", method: :post do %>
      <form class="form-signin">
        <h2 class="form-signin-heading">Merci de vous identifier</h2>
        <p><%= link_to "Pas encore de compte, rendez vous ici", new_user_path %></p>
        <div class="form-group">
            <label for="inputName">Votre Nom</label>
            <input type="text" name="name" id="inputName" class="form-control" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" >Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">S'identifier</button>
        </div>
      </form>
<% end %>
    </div> <!-- /container -->