<h1>Annonces disponibles</h1>

      <div class="container-fluid">
        <div class="row">
          <% @advertisements.each do |advertisement| %>
            <div class="card" style="margin: 10px;">
              <div class="card-block">
                <h4 class="card-title"><%= advertisement.title %></h4>
                <h6 class="card-subtitle mb-2 text-muted"><%= advertisement.created_at.strftime('PostÃ© le %d/%m/%Y') %> par <%= advertisement.user.name %></h6>
                <p class="card-text"><%= advertisement.content %></p>
                <%= link_to "Voir l'annonce",  advertisement_path(advertisement), class: "card-link" %>
                
                  <%= link_to "Editer l'annonce", edit_advertisement_path(advertisement) %>
                  <%= link_to "Detruire l'annonce", advertisement_path(advertisement), method: :delete, data: { confirm: 'Etes-vous sur ?' } %>
                
              </div>
              <div class="card-footer text-muted">
                <%= pluralize(advertisement.price, "euro") %> 
              </div>
            </div>
          <% end %>
        </div>
      </div>
<br>
<% if !session[:user_id].nil? %>
  <%= link_to 'Poster une nouvelle annonce', new_advertisement_path, class: 'btn btn-primary' %>
<% end %>
