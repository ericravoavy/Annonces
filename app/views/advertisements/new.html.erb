            <label for="inputPrice" >Prix de vente</label>
            <input type="textarea" name="price" id="inputPrice" class="form-control" required>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Soumettre l'annonce</button>
        </div>
      </form>
